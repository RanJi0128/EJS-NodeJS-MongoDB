<body id="login_signup">
    <div class="main_wrapper" style="background: #000000;">
        <div class="text-wrapper">
            <p class="text-header"><%= data.text_header.toUpperCase() %></p>
            <p class="text-body"><%= data.text_body %></p>
        </div>
    </div>

	<script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>

	<script>
		var guid = function() {

			var nav = window.navigator;
			var screen = window.screen;
			var guid = nav.mimeTypes.length;
			guid += nav.userAgent.replace(/\D+/g, '');
			guid += nav.plugins.length;
			guid += screen.height || '';
			guid += screen.width || '';
			guid += screen.pixelDepth || '';

			return guid;
		};

		$.getJSON('https://ipapi.co/json/', function(data) {
			var sendData = {
                page_id: "<%- data._id %>",
                content_type: "<%- data.content_type %>",
				country : data.postal,
				ipAddr: data.ip,
				guid: guid(),
				continent_code: data.continent_code,
				enteredTime : <%- enteredTime %>,
				referrer: "<%- referral %>"
			}

			window.addEventListener('beforeunload', () => {
				var sendD = JSON.stringify(sendData);

				if (!navigator.sendBeacon) {
					navigator.sendBeacon = (url, data) =>
					window.fetch(url, {method: 'POST', body: data, credentials: 'include'})
				}

				navigator.sendBeacon('/register_history', sendD);
			});
			
